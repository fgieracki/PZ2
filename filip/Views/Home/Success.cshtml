@using filip.Data
@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Success";
}

<div class="text-center">
    <h1 class="display-4">Profile Page!</h1>
    <p>Email: @ViewData["email"]</p>
    <button onclick="location.href = '/home/logout';">Logout</button>
</div>

<div class="text-center">
    <table>
        <thead>
        <tr>
            <td>#</td>
            <td>Data</td>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in (ViewData["records"] as List<Record>)!)
        {
            <tr>
                <td>@item.Id </td>
                <td>@item.Content </td>
            </tr>
        }
        </tbody>
    </table>

    <p>Add new record</p>
    <form method="post" action="/Home/Insert">
        <input name="content" placeholder="Data"/>
        <button type="submit">Insert</button>
    </form>


</div>